<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/profile_image"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/colorPrimary"/>
    <EditText
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:inputType="textImeMultiLine"
        android:hint="Tên người dùng"
        android:textAlignment="center"
        android:drawableStart="@mipmap/edit_profile"
        android:layout_marginTop="10dp"
        android:background="@drawable/inputs"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:id="@+id/set_user_name"
        android:layout_below="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="RtlCompat"
        android:padding="5dp"/>
    <EditText
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:inputType="textImeMultiLine"
        android:hint="Giới thiệu ngắn về bản thân"
        android:textAlignment="center"
        android:drawableStart="@mipmap/edit_status"
        android:layout_marginTop="10dp"
        android:background="@drawable/inputs"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:id="@+id/set_profile_status"
        android:layout_below="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="RtlCompat"
        android:padding="5dp"/>
    <Button
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/set_profile_status"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:textAllCaps="false"
        android:background="@drawable/buttons"
        android:text="Cập nhật"
        android:inputType="textImeMultiLine"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/update_setting_button"
        android:textColor="@color/colorAccent"
        tools:ignore="HardcodedText,TextViewEdits" />



</RelativeLayout>